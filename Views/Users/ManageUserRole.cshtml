@model BugTracker.Models.ApplicationUser
@{
    ViewBag.Title = "Manage User Roles";
}

<h2>Manage User Roles</h2>

<div class="row">
    <div class="col-3 text-avatar-center h2">
        Managing Role for @Model.FullName
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row">
    <div class="col-3">
        @Html.DropDownList("RoleName", "-- No Role --")
    </div>
</div>


 <div class="row">
     <div class="col-3">
         <button type="submit" class="btn btn-outline-dark">Save change</button>
     </div>
 </div>
}


