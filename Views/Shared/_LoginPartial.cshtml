<!--Beginning of partial-->
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav-item nav-profile dropdown">
            <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                <div class="nav-profile-img">
                    <img src="~/Images/Purple/face1.jpg" alt="image">
                    <span class="availability-status online"></span>
                </div>
                <div class="nav-profile-text">
                   <p class="text-black">
                      @User.Identity.GetUserName()
                   </p>
                </div>
            </a>
            <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                <a class="dropdown-item" href="#">
                    @Html.ActionLink("Manage", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">
                    <a class="mdi mdi-logout mr-2 text-primary" href="javascript:document.getElementById('logoutForm').submit()">Signout</a>
                </a>
            </div>
        </ul>
    }
}
else
{

    <ul class="nav-item nav-profile dropdown">
        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
            <div class="nav-profile-img">
                <img src="~/Images/Purple/face1.jpg" alt="image">
                <span class="availability-status online"></span>
            </div>
            <div class="nav-profile-text">
                <p class="text-black">User.Identity.GetUserName()</p>
            </div>
        </a>
        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
            <a class="dropdown-item" href="#">
                @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">
                @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </a>
        </div>
    </ul>
}

